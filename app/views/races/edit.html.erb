<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title></title>
</head>
<body>
  <div class="div_top">
  <h1>Edit Races</h1>
</div>


  <%= form_for [@runner, @race] do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :time %><br>
    <%= f.text_field :time %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <%= form_for [@runner, @race], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
  <% end %>
</body>
</html>
